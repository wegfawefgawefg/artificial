{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run gub (Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/gub",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "DISPLAY", "value": "${env:DISPLAY}" },
        { "name": "WAYLAND_DISPLAY", "value": "${env:WAYLAND_DISPLAY}" },
        { "name": "SDL_VIDEODRIVER", "value": "x11" }
      ],
      "externalConsole": false,
      "preLaunchTask": "cmake: build (dev)",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
